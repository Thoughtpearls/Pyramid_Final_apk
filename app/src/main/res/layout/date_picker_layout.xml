<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:ignore="MissingDefaultResource"
android:background="#60000000"
    >

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="11dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/popupTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Date Range"
            android:textColor="@color/black"
            android:fontFamily="@font/epilogue_regular"
            android:textSize="14sp"
            android:layout_margin="15dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >

            <TextView
                android:id="@+id/fromDateLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="From Date"
                android:gravity="center"
                android:fontFamily="@font/epilogue_bold"
                android:textSize="18dp"
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/fromDateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2022-12-20"
                android:gravity="center"
                android:fontFamily="@font/epilogue_regular"
                android:textSize="18dp"
                android:layout_margin="5dp"
                />


            <TextView
                android:id="@+id/toDateLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To Date"
                android:gravity="center"
                android:fontFamily="@font/epilogue_bold"
                android:textSize="18dp"
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/toDateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2022-12-21"
                android:gravity="center"
                android:fontFamily="@font/epilogue_regular"
                android:textSize="18dp"
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/leaveReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reason For Leave"
                android:gravity="center"
                android:fontFamily="@font/epilogue_bold"
                android:textSize="18dp"
                android:layout_margin="5dp"
                android:visibility="gone"
                />

            <EditText
                android:id="@+id/leaveReasonEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:layout_margin="5dp"
                android:hint="personal leave"
                android:inputType="textMultiLine"
                android:visibility="gone"/>


        </LinearLayout>

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:background="@color/white"
            android:clipToOutline="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/mySpinner"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_margin="10dp"
                    />
                <Button
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginRight="5dp"
                    android:text="refresh"/>
            </LinearLayout>

        </LinearLayout>-->

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/okAlertButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorButton"
                android:textColor="@color/white"
                android:text="OK"
                android:layout_weight="1"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#c0c0c0"/>
            <Button
                android:id="@+id/cancelAlertButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@color/colorButton"
                android:text="CANCEL" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

