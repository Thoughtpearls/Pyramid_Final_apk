<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:ignore="MissingDefaultResource"
android:background="#60000000">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="11dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@color/green">
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:lottie_repeatCount="1"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/confetti">

    </com.airbnb.lottie.LottieAnimationView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/popupTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finished Ride Details"
            android:textColor="@color/black"
            android:fontFamily="@font/epilogue_bold"
            android:textSize="14sp"
            android:layout_margin="15dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rideDateLabelTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date :"
                    android:gravity="left"
                    android:fontFamily="@font/epilogue_bold"
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/rideDateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2022-03-01"
                    android:gravity="right"
                    android:fontFamily="@font/epilogue_regular"
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/distanceTravelledLabelTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance :"
                    android:gravity="left"
                    android:fontFamily="@font/epilogue_bold"
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/distanceTravelledTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100 Km"
                    android:gravity="right"
                    android:fontFamily="@font/epilogue_regular"
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rideDurationLabelTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration  :"
                    android:gravity="left"
                    android:fontFamily="@font/epilogue_bold"
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/rideDurationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:gravity="right"
                    android:fontFamily="@font/epilogue_regular"
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/rideAmountLabelTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reimbursement cost :"
                    android:gravity="left"
                    android:fontFamily="@font/epilogue_bold"
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/rideAmountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs 100"
                    android:gravity="right"
                    android:fontFamily="@font/epilogue_regular"
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rideReasonLabelTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reason :"
                    android:gravity="left"
                    android:fontFamily="@font/epilogue_bold"
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/rideReasonTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Collection"
                    android:gravity="right"
                    android:fontFamily="@font/epilogue_regular"
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    />

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/okAlertButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorButton"
                android:textColor="@color/white"
                android:text="OK"
                android:layout_weight="1"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

